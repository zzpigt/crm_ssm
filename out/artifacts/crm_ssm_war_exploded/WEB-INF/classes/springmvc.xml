<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
        http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

	<!-- 扫描指定包下的注解 -->
	<context:component-scan base-package="cn.zzpigt"></context:component-scan>

	<!-- 注解驱动 -->
	<mvc:annotation-driven  conversion-service="conversionServiceFactoryBean"/>

	<!--配置全局异常处理器 -->
	<bean class="cn.zzpigt.exception.MyHandleException"/>



	<!-- 配置拦截器 -->
	<mvc:interceptors>
		<mvc:interceptor>
			<!-- 所有的请求都进入拦截器 -->
			<mvc:mapping path="/**"/>
			<!-- 配置具体的拦截器 -->
			<bean class="cn.zzpigt.interceptor.MyHandlerInterceptor" />
		</mvc:interceptor>
	</mvc:interceptors>


	<!-- 配置Conveter转换器 转换工厂 （日期、去掉前后空格）。。 -->
	<bean id="conversionServiceFactoryBean"
		  class="org.springframework.format.support.FormattingConversionServiceFactoryBean">
		<!-- 配置 多个转换器 -->
		<property name="converters">
			<list>
				<bean class="cn.zzpigt.conversion.DateConveter" />
			</list>
		</property>
	</bean>


</beans>